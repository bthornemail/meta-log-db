{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist/browser",
    "rootDir": "./src",
    "moduleResolution": "node",
    "types": [],
    "paths": {
      "@types/frontmatter": ["./src/types/frontmatter"],
      "@types/canvasl": ["./src/types/index"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/browser/**/*",
    "src/types/**/*",
    "src/prolog/**/*",
    "src/datalog/**/*",
    "src/rdf/**/*",
    "src/shacl/**/*",
    "src/r5rs/parser.ts",
    "docs/28-Canvasl-Frontmatter-Knowledge-Model/**/*.md"
  ],
  "exclude": ["node_modules", "dist", "src/__tests__", "src/**/__tests__"]
}

